<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.du.luanchst.activities.FirstActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/firstActivity"
        android:id="@+id/fist_tv_textView"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="207dp"
        android:textAlignment="center" />

    <Button
        android:text="@string/first_start_secondactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fist_tv_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/first_bt_start_second" />
</RelativeLayout>
